<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Header -->
        <TextView
            style="@style/TextHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Analysis"
            android:layout_marginBottom="@dimen/spacing_tiny"/>

        <TextView
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate comprehensive insights from your tree data"
            android:layout_marginBottom="@dimen/spacing_large"/>

        <!-- Project Selection Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Project"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small"/>

                <Spinner
                    android:id="@+id/spinnerProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:background="@drawable/spinner_background"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutStats"
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/primary_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Project Overview"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_small"/>

                <TextView
                    android:id="@+id/tvStatsContent"
                    style="@style/TextBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- No Projects Message -->
        <TextView
            android:id="@+id/tvNoProjects"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:text="No projects available.\nCreate a project and tag some trees first!"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:visibility="gone"/>

        <!-- Analysis Options -->
        <LinearLayout
            android:id="@+id/layoutAnalysisOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Generate Analysis"/>

            <!-- Distribution Analysis -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnDistribution"
                style="@style/AppCard.Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:text="ðŸ“Š"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_medium"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Species Distribution"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pie chart of species composition"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="View"
                        app:tint="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Height Analysis -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHeight"
                style="@style/AppCard.Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:text="ðŸ“"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_medium"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height Analysis"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compare tree heights by species"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="View"
                        app:tint="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Width Analysis -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnWidth"
                style="@style/AppCard.Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:text="ðŸ“"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_medium"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Width Analysis"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average trunk width by species"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="View"
                        app:tint="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Heatmap -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHeatmap"
                style="@style/AppCard.Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:text="ðŸ—ºï¸"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_medium"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbon Heatmap"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Geographic carbon sequestration map"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:contentDescription="View"
                        app:tint="@color/accent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Diversity Map -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnDiversity"
                style="@style/AppCard.Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:text="ðŸŒˆ"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_medium"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diversity Map"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color-coded species distribution"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:contentDescription="View"
                        app:tint="@color/info"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Summary -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSummary"
                style="@style/AppCard.Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:text="ðŸ“‹"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_medium"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comprehensive Summary"
                            android:textStyle="bold"
                            android:textColor="@color/text_on_primary"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete project overview with statistics"
                            android:textColor="#E8F5E9"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="View"
                        app:tint="@color/text_on_primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/spacing_large"
            android:visibility="gone"/>

        <!-- Analysis Result Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Chart Image -->
                <ImageView
                    android:id="@+id/ivAnalysisResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:contentDescription="Analysis Chart"/>

                <!-- Text Result -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="400dp">

                    <TextView
                        android:id="@+id/tvAnalysisResult"
                        style="@style/TextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/card_padding"
                        android:fontFamily="monospace"
                        android:visibility="gone"/>

                </ScrollView>

                <!-- Export Buttons -->
                <LinearLayout
                    android:id="@+id/layoutExportButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Export Options"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_small"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExportCurrentPng"
                            style="@style/AppButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:text="ðŸ“¥ PNG"
                            android:textSize="14sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExportCurrentPdf"
                            style="@style/AppButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:text="ðŸ“„ PDF"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportAllCharts"
                        style="@style/AppButton.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="ðŸ“¦ Export All Charts"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>