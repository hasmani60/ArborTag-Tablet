<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/primary_light"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!-- Project Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/primary"
                android:gravity="center"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_tree"
                    android:contentDescription="Tree"
                    app:tint="@color/text_on_primary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvProjectName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_medium"
                android:text="Project Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_light"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <!-- Statistics Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="@dimen/spacing_medium">

            <!-- Row 1: Tree Count and Carbon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:baselineAligned="false">

                <!-- Tree Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_small"
                    android:background="#E8F5E9"
                    android:layout_marginEnd="@dimen/spacing_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌳"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/tvTreeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="50 trees"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <!-- Total Carbon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_small"
                    android:background="#E3F2FD"
                    android:layout_marginStart="@dimen/spacing_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💨"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/tvTotalCarbon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="450 kg CO₂"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/info"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Row 2: Avg Height and Width -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Avg Height -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📏 Avg Height"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvAvgHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="12.5 m"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

                <!-- Avg Width -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📐 Avg Width"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvAvgWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0.8 m"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>