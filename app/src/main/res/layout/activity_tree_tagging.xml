<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCapture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Measurement Layout (Hidden Initially) - Now with full-screen zoomable interface -->
    <FrameLayout
        android:id="@+id/layoutMeasurement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCapture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Zoomable Image Container (Replaces the static ImageView) -->
        <com.arbortag.app.views.ZoomableImageView
            android:id="@+id/ivMeasurementImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Captured tree image for measurement"/>

        <!-- Floating Measurement Toolbar -->
        <LinearLayout
            android:id="@+id/measurementToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:background="@drawable/toolbar_background"
            android:elevation="8dp"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMeasureHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📏 Height"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMeasureWidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📐 Width"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMeasureCanopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌳 Canopy"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↩"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>

        <!-- Measurement Status Display -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/surface">

            <TextView
                android:id="@+id/tvMeasurementStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap two points to measure"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- ArUco Status Overlay -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/arucoStatusCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:layout_marginTop="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressAruco"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMarkerStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⌛ Detecting Marker..."
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"/>

                    <TextView
                        android:id="@+id/tvPixelRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratio: -- px/m"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecalibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔄"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:iconPadding="0dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Measurement Results Panel (Collapsible) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/measurementResultsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Measurements"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Height:"
                        android:textColor="@color/secondary_text"/>

                    <TextView
                        android:id="@+id/tvHeightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not measured"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Width:"
                        android:textColor="@color/secondary_text"/>

                    <TextView
                        android:id="@+id/tvWidthValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not measured"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Canopy:"
                        android:textColor="@color/secondary_text"/>

                    <TextView
                        android:id="@+id/tvCanopyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optional"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Select Species ➔"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>


    <!-- Capture Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCapture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="📷"
        android:textSize="32sp"
        app:cornerRadius="40dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>