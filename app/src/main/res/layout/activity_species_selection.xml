<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_tree"
                android:contentDescription="Species"
                app:tint="@color/primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Species Selection"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

        </LinearLayout>

        <!-- Measurements Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMeasurements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tree Measurements"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"/>

                <!-- Measurement Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#E8F5E9"
                    android:padding="12dp">

                    <!-- Height -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvMeasuredHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 m"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/success"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <!-- Width -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Width"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvMeasuredWidth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 m"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/info"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <!-- Canopy -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Canopy"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/tvMeasuredCanopy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not measured"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Species Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSpecies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface"
            app:layout_constraintTop_toBottomOf="@id/cardMeasurements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Tree Species"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"/>

                <!-- Species Spinner - MUST BE SPINNER, not other view type -->
                <Spinner
                    android:id="@+id/spinnerSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:padding="16dp"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GPS Location Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface"
            app:layout_constraintTop_toBottomOf="@id/cardSpecies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPS Location"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <!-- GPS Progress Bar - MUST BE ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressBarGps"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"/>

                </LinearLayout>

                <!-- GPS Status - MUST BE TextView -->
                <TextView
                    android:id="@+id/tvGpsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acquiring GPS location..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning"
                    android:layout_marginBottom="8dp"/>

                <!-- GPS Coordinates - MUST BE TextView -->
                <TextView
                    android:id="@+id/tvGpsCoordinates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lat: --, Long: --"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp"/>

                <!-- GPS Accuracy Warning - MUST BE TextView -->
                <TextView
                    android:id="@+id/tvGpsAccuracyWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GPS accuracy warning"
                    android:textSize="12sp"
                    android:textColor="@color/warning"
                    android:background="#FFF3E0"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp"/>

                <!-- GPS Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Refresh GPS Button - MUST BE Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRefreshGps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refresh GPS"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        app:icon="@android:drawable/ic_menu_mylocation"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                    <!-- Enable GPS Button - MUST BE Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnableGps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable GPS"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:icon="@android:drawable/ic_menu_compass"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Carbon Sequestration Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCarbon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/primary_light"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/cardGps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Carbon Sequestration"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"/>

                <!-- Carbon Value - MUST BE TextView -->
                <TextView
                    android:id="@+id/tvCarbonValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 kg COâ‚‚/year"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Based on tree species and measurements"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardCarbon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Discard Button - MUST BE Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiscard"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Discard"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Save Button - MUST BE Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Save Tree"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart"
                style="@style/AppButton.Primary"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>