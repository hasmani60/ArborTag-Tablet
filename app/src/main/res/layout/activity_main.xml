<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_large">

            <TextView
                android:id="@+id/tvAppTitle"
                style="@style/TextDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌳 ArborTag"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/tvAppSubtitle"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:text="Professional Tree Tagging &amp; Carbon Analysis"/>

        </LinearLayout>

        <!-- Quick Actions Grid -->
        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="Quick Actions"/>

        <!-- New Location Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNewLocation"
            style="@style/AppCard.Action"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardBackgroundColor="@color/primary_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/card_padding">

                <ImageView
                    android:layout_width="@dimen/icon_large"
                    android:layout_height="@dimen/icon_large"
                    android:src="@drawable/ic_location"
                    android:contentDescription="New Location"
                    app:tint="@color/primary"/>

                <TextView
                    style="@style/TextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="New Location"
                    android:textColor="@color/primary"/>

                <TextView
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:text="Start tagging trees"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Data Curation Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDataCuration"
                style="@style/AppCard.Action"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_database"
                        android:contentDescription="Data Curation"
                        app:tint="@color/primary"/>

                    <TextView
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="Data Curation"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        style="@style/TextSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:text="Export data"
                        android:textSize="12sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Data Analysis Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDataAnalysis"
                style="@style/AppCard.Action"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_analytics"
                        android:contentDescription="Data Analysis"
                        app:tint="@color/primary"/>

                    <TextView
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="Data Analysis"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        style="@style/TextSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:text="Generate insights"
                        android:textSize="12sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Features Section -->
        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="Features"/>

        <!-- Features List -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Feature 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:text="📏"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ArUco-Based Measurement"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accurate height, width, and canopy measurements"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginHorizontal="@dimen/spacing_medium"/>

                <!-- Feature 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:text="📍"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GPS Geotagging"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precise location tracking for every tree"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginHorizontal="@dimen/spacing_medium"/>

                <!-- Feature 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:text="💨"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbon Sequestration"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automatic CO₂ absorption calculations"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginHorizontal="@dimen/spacing_medium"/>

                <!-- Feature 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:text="📊"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced Analytics"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comprehensive charts, maps, and reports"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>